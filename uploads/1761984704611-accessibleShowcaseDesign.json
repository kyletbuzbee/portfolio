{
  "name": "accessible-design-system",
  "version": "1.0.0",
  "description": "Production-ready design system emphasizing accessibility, theming, and developer workflows",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:components\" \"npm run dev:docs\" \"npm run dev:tokens\"",
    "dev:components": "cd packages/components && npm run dev",
    "dev:docs": "cd packages/docs && npm run dev",
    "dev:tokens": "cd packages/tokens && npm run dev",
    "build": "npm run build:tokens && npm run build:components && npm run build:docs",
    "build:components": "cd packages/components && npm run build",
    "build:docs": "cd packages/docs && npm run build",
    "build:tokens": "cd packages/tokens && npm run build",
    "test": "npm run test:components && npm run test:tokens",
    "test:components": "cd packages/components && npm test",
    "test:tokens": "cd packages/tokens && npm test",
    "lint": "eslint packages/**/*.{js,ts,tsx} --max-warnings=0",
    "lint:fix": "eslint packages/**/*.{js,ts,tsx} --fix",
    "storybook": "cd packages/components && npm run storybook",
    "build-storybook": "cd packages/components && npm run build-storybook",
    "chromatic": "cd packages/components && npx chromatic",
    "clean": "rm -rf node_modules packages/*/node_modules packages/*/dist packages/*/storybook-static"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lerna": "^8.1.2",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "packages/**/*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "keywords": [
    "design-system",
    "accessibility",
    "a11y",
    "wcag",
    "react",
    "typescript",
    "storybook",
    "theming",
    "components"
  ],
  "author": "Accessible Design System Team",
  "license": "MIT"
}
